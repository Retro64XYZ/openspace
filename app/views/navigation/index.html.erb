<%= content_for :header do %>
  <h1>Open Space</h1>
  <% if current_user %>
    <%= link_to "Sign Out", signout_path, 'data-role'=> 'button', 'data-icon'=>'twitter', 'class'=>'ui-btn-right' %>
  <% else %>
    <%= link_to "Sign in", "/auth/twitter", 'data-role'=>'button', 'data-icon'=>'twitter', 'class'=>'ui-btn-right', :rel => 'external' %>
  <% end %>
<% end %>

<ul data-role="listview" data-inset="true">
  <li data-role="list-divider">Eventos</li>
  <% @events.each do |event| %>
  	<li>
  	  <%= link_to event.name, menu_event_path(event) %>
  	</li>
  <% end %>
</ul>

<%= content_for :footer do %>
  <div data-role="footer" data-position="fixed">
    <div data-role="navbar">
  		<ul>
  			<li><%= link_to "Sobre los Open Space", openspace_path, "data-icon"=>"star" %></li>
  			<li><%= link_to "Acerca de", about_path, "data-icon"=>"info" %></li>
  		</ul>
  	</div>
	</div>
<% end %>