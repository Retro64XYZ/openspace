<%= content_for :header do %>
  <%= link_to "Evento", menu_event_path(current_event), 'data-icon'=> 'back' %>
  <h1>Agenda</h1>
<% end %>

<ul data-role="listview" data-inset="true">
  <% @agenda.each do |item| %>
    <li data-role="list-divider"><%= item.starts.strftime('%H:%M') %> - <%= item.ends.strftime('%H:%M') %></li>
    <li>
      <h3><%= item.title %></h3>
      <p>
        <%= item.slots.map { |f| f.location.name }.join ', ' %>
      </p>
    </li>
  <% end %>
</ul>