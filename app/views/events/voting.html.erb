<%= content_for :header do %>
  <%= link_to "", menu_event_path(current_event), 'data-icon'=> 'back', 'data-iconpos'=>'notext' %>
  <h1>Sesiones</h1>
<% end %>

<% if @sessions.empty? %>
  No hay sesiones propuestas.
<% else %>
  <ul data-role="listview" data-inset="true" data-filter="true" data-count-theme="b">
  <% @sessions.each do |session| %>
    <li>
      <%= link_to session.title, vote_event_session_path(current_event, session), :remote => true, :method => :post %>
      <span class="ui-li-count">Votos: <%= session.up_votes %></span>
    </li>
  <% end %>
  </ul>
<% end %>